<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="layout.MainButton"
    android:background="#ff0000"
    >

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/btnMenueSubmarines"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:background="#ff0000"
        android:onClick="MenueFragmentsChanged"
        android:text="SUBMARINES"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btnMenueBurgers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BURGERS"
        android:textColor="#ffffff"
        android:onClick="MenueFragmentsChanged"

        android:layout_marginTop="33dp"
        android:background="#ff0000"
        android:layout_below="@+id/btnMenueSubmarines"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnMenueSandwitches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SANDWITCHES"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnMenueBurgers"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:background="#ff0000"
        android:onClick="MenueFragmentsChanged"

        />

    <Button
        android:id="@+id/btnMenueDeserts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DESERTS"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/btnMenueSandwitches"
        android:layout_alignParentStart="true"
        android:onClick="MenueFragmentsChanged"

        />

    <Button
        android:id="@+id/btnMenueDrinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drinks"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnMenueDeserts"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:onClick="MenueFragmentsChanged"

        />

    <Button
        android:id="@+id/btnCheckOut"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:text="CHECKOUT"
        android:background="#ffffff"
        android:textColor="#000000"

        android:layout_below="@+id/btnMenueDrinks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />


</RelativeLayout>
